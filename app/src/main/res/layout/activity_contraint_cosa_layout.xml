<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContraintCosaLayout">

    <Space
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/s2"
        app:layout_constraintVertical_weight="1"
        />

    <Space
        android:id="@+id/s2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/s1"
        app:layout_constraintBottom_toTopOf="@id/s3"
        app:layout_constraintVertical_weight="3"
        />

    <Space
        android:id="@+id/s3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/s4"
        app:layout_constraintTop_toBottomOf="@id/s2"
        app:layout_constraintBottom_toTopOf="@id/s6"
        app:layout_constraintVertical_weight="4"
        app:layout_constraintHorizontal_weight="1"
        />

    <Space
        android:id="@+id/s4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/s3"
        app:layout_constraintEnd_toStartOf="@id/s5"
        app:layout_constraintTop_toBottomOf="@id/s2"
        app:layout_constraintBottom_toTopOf="@id/s6"
        app:layout_constraintVertical_weight="4"
        app:layout_constraintHorizontal_weight="3"
        />

    <Space
        android:id="@+id/s5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/s4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/s2"
        app:layout_constraintBottom_toTopOf="@id/s6"
        app:layout_constraintVertical_weight="4"
        app:layout_constraintHorizontal_weight="1"
        />

    <Space
        android:id="@+id/s6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/s3"
        app:layout_constraintBottom_toTopOf="@id/s7"
        app:layout_constraintVertical_weight="3"
        />

    <Space
        android:id="@+id/s7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/s6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        />


</androidx.constraintlayout.widget.ConstraintLayout>